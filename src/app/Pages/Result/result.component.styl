
.b-page-6 {
  padding 6.5em 0 6em
  transition all 800ms ease-in

}

.b-page-6__header {
  line-height: 4.615em;
  text-align: center
  margin-bottom: 1.5em;
  h2 {
    font-size: 3.846em;
    font-weight: 700;
  }
}

.b-filter {
  text-align: center
  li {
    display: inline-block
    border: 0.077em solid #99caf2;
    border-radius: 10px;
    margin-right: 1.538em
    padding: 0.4em 1.2em;
    cursor: pointer
    color: #99caf2;
    &:last-child {
      margin-right: 0
    }
    span {
      font-size: 1.385em;
    }
    &:hover {
      border: 0.077em solid #fff;
      color: #fff;
      opacity: 0.9;
    }
  }
}

li.b-filter--active {
  background-color: #003e70;
  color: #0b60a3;
  border none
  cursor auto
  &:hover {
    border: none;
    color: #0b60a3;
    opacity: 1;
  }
}

.b-result-wrapper {
  display: flex
  flex-wrap wrap
  margin: 2.308em -1.35em 0;
}

.b-other {
  height: 19.846em
  width: 29.231em
  border: 0.2em dashed #1c5e92
  text-decoration: underline;
  text-align: center
  position: relative
  background-color: #014980
  p {
    margin: 0
    font-size: 1.615em;
    font-weight: 300;
    display: inline-block
    vertical-align: middle
    cursor: pointer
  }
}

.b-other_text {
  font-size: 1.61em;
  left: 0;
  position: absolute;
  right: 0;
  top: 5em;
  cursor: pointer
  text-decoration: underline
}

.b-no__item {
  width: 29.231em;
  margin: auto
  border: 0.077em dashed #99caf2;
  height: 14em;
  position: relative;
  text-align: center;
  text-decoration: underline;
}

.b-no__item-text {
  font-size: 1.61em;
  left: 0;
  position: absolute;
  right: 0;
  top: 3.5em;
}

.b-result__movie--circle {
  background-color: #256597
  width: 12.308em
  height: 12.308em
  border-radius: 50%
  margin: auto
}

//no category photo
.b-no-photo--film, .b-no-photo--concert, .b-no-photo--teatr, .b-no-photo--bar, .b-no-photo--masterclass, .b-no-photo--exhib {
  position: relative
  background #407aab
  &:before {
    content: ""
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    background-color: #256597
    width: 12.308em
    height: 12.308em
    border-radius: 50%
    margin: auto
  }
}

.b-no-photo--film {
  &:after {
    background: rgba(0, 0, 0, 0) url("../../../assets/img/film.png") no-repeat scroll center center;
    bottom: 0;
    content: "";
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
